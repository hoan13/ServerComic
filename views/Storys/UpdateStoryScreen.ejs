<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sửa Truyện</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css"
    />
  </head>
  <body>
    <div>
      <h1 class="text-center mt-3">Sửa Truyện</h1>
      <div style="max-width: 400px; margin: 0 auto">
        <form
          id="formEditStory"
          class="was-validated"
          method="PUT"
          enctype="multipart/form-data"
          action="/api/updateStory/<%= story._id %>"
        >
          <!-- Trường ẩn để lưu ID của câu chuyện cần sửa -->
          <input
            type="hidden"
            id="storyId"
            name="storyId"
            value="<%= story._id %>"
          />

<!-- Thể loại Truyện -->
<div class="mb-3">
  <label for="genre" class="form-label">Thể loại Truyện:</label>
  <select id="genre" class="form-select" name="genre" required>
    <option value="" disabled>Chọn Thể loại Truyện</option>
    <option value="Chuyển Sinh" <% if (story.genre === 'Chuyển Sinh') { %>selected<% } %>>Chuyển Sinh</option>
    <option value="Comedy" <% if (story.genre === 'Comedy') { %>selected<% } %>>Comedy</option>
    <option value="Cổ Đại" <% if (story.genre === 'Cổ Đại') { %>selected<% } %>>Cổ Đại</option>
    <option value="Manhua" <% if (story.genre === 'Manhua') { %>selected<% } %>>Manhua</option>
    <option value="Ngôn tình" <% if (story.genre === 'Ngôn tình') { %>selected<% } %>>Ngôn tình</option>
    <option value="Thiếu Nhi" <% if (story.genre === 'Thiếu Nhi') { %>selected<% } %>>Thiếu Nhi</option>
  </select>
  <div class="invalid-feedback">Vui lòng chọn loại truyện.</div>
</div>



          <!-- Tên Truyện -->
          <div class="mb-3 mt-3">
            <label for="title" class="form-label">Tên Truyện:</label>
            <input
              type="text"
              class="form-control"
              id="title"
              name="title"
              placeholder="Nhập tên Truyện"
              required
              value="<%= story.title %>"
            />
            <div class="valid-feedback">Hợp lệ.</div>
            <div class="invalid-feedback">Vui lòng điền tên Truyện.</div>
          </div>

          <!-- Tác Giả -->
          <div class="mb-3 mt-3">
            <label for="author" class="form-label">Tác Giả:</label>
            <input
              type="text"
              class="form-control"
              id="author"
              name="author"
              placeholder="Nhập Tác Giả"
              required
              value="<%= story.author %>"
            />
            <div class="valid-feedback">Hợp lệ.</div>
            <div class="invalid-feedback">Vui lòng điền Tác Giả.</div>
          </div>

          <!-- Mô tả -->
          <div class="mb-3">
            <label for="description" class="form-label">Mô tả:</label>
            <input
              type="text"
              class="form-control"
              id="description"
              name="description"
              placeholder="Nhập Mô tả"
              required
              value="<%= story.description %>"
            />
            <div class="valid-feedback">Hợp lệ.</div>
            <div class="invalid-feedback">Vui lòng điền Mô tả.</div>
          </div>

          <!-- Trạng thái -->
<div class="mb-3">
  <label class="form-label">Trạng thái:</label><br />
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="status" id="statusOngoing" value="Ongoing" <% if (story.status === 'Ongoing') { %>checked<% } %> required />
    <label class="form-check-label" for="statusOngoing">Ongoing</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="status" id="statusCompleted" value="Completed" <% if (story.status === 'Completed') { %>checked<% } %> required />
    <label class="form-check-label" for="statusCompleted">Completed</label>
  </div>
</div>


          <!-- Hot -->
          <div class="mb-3">
            <label class="form-label">Hot:</label><br />
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="isHot"
              id="hotYes" value="true" required <% if (story.isHot === true) {
              %>checked<% } %> />
              <label class="form-check-label" for="hotYes">Có</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="isHot"
              id="hotNo" value="false" required <% if (story.isHot === false) {
              %>checked<% } %> />
              <label class="form-check-label" for="hotNo">Không</label>
            </div>
          </div>

          <!-- VIP -->
          <div class="mb-3">
            <label class="form-label">VIP:</label><br />
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="isVIP"
              id="vipYes" value="true" required <% if (story.isVIP === true) {
              %>checked<% } %> />
              <label class="form-check-label" for="vipYes">Có</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="isVIP"
              id="vipNo" value="false" required <% if (story.isVIP === false) {
              %>checked<% } %> />
              <label class="form-check-label" for="vipNo">Không</label>
            </div>
          </div>

          <!-- Ảnh Bìa -->
          <div class="mb-3">
            <label for="coverImage" class="form-label">Ảnh Bìa:</label>
            <input
              type="file"
              class="form-control"
              id="coverImage"
              name="coverImage"
              accept="image/*"
              multiple
              required
            />
            <div class="valid-feedback">Hợp lệ.</div>
            <div class="invalid-feedback">Vui lòng chọn một tệp ảnh.</div>
          </div>
          <!-- Ngày xuất bản -->
          <div class="mb-3">
            <label for="yearPublished" class="form-label">Ngày xuất bản:</label>
            <input
              type="text"
              class="form-control"
              id="yearPublished"
              name="yearPublished"
              required
              value="<%= story.yearPublished %>"
            />
            <div class="valid-feedback">Hợp lệ.</div>
            <div class="invalid-feedback">Vui lòng chọn Ngày xuất bản.</div>
          </div>

          <!-- Nút Sửa -->
          <button
            id="editButton"
            class="btn btn-primary d-block mx-auto mt-3"
            type="submit"
          >
            Sửa
          </button>
        </form>
      </div>
    </div>

    <!-- Các script để thêm các chức năng cần thiết -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script>
      $(document).ready(function () {
        // Khởi tạo Bootstrap Datepicker
        $("#yearPublished").datepicker({
          format: "dd/mm/yyyy",
          autoclose: true,
          todayHighlight: true,
        });
      });

      $(document).ready(function () {
        $("#formEditStory").submit(function (event) {
          // Ngăn chặn hành động mặc định của biểu mẫu (không gửi lại trang)
          event.preventDefault();

          // Thu thập dữ liệu từ biểu mẫu
          var formData = new FormData($(this)[0]); // Sử dụng FormData để lấy dữ liệu biểu mẫu

          // Gửi dữ liệu đến máy chủ
          $.ajax({
            type: "PUT",
            url: "/api/updateStory/"+ $("#storyId").val(),
            data: formData, // Sử dụng FormData để gửi dữ liệu
            contentType: false, // Không thiết lập contentType
            processData: false, // Không xử lý dữ liệu
            success: function (response) {
              // Xử lý khi yêu cầu thành công
              console.log(response);
              // Hiển thị cảnh báo thành công
              alert("Sửa truyện thành công!");

              // Quay lại trang danh sách truyện sau khi sửa thành công
              window.location.href = "/liststory";
            },
            error: function (xhr, status, error) {
              // Xử lý khi yêu cầu gặp lỗi
              console.error(error);
              // Thông báo lỗi cho người dùng nếu cần
              alert("Đã xảy ra lỗi khi sửa truyện. Vui lòng thử lại sau.");
            },
          });
        });
      });
    </script>
  </body>
</html>
